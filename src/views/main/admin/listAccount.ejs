                                            <th class="border-top-0">Account</th>
                                            <th class="border-top-0">Email</th>
                                            <th class="border-top-0">Role</th>                                            
                                            <th class="border-top-0">Status</th>
                                            <th class="border-top-0">Control</th>
                                        </tr>
                                    </thead>
                                    <tbody class="comment-widgets scrollable">
                                        <%if(users){%>
                                            <%users.forEach(user => {%>
                                                <tr>
                                                    <div>
                                                        <td>
                                                            <div class="d-flex align-items-center">
                                                                <div class="m-r-10">
                                                                        <img src= <%-user.avatarUrl%> class="btn btn-circle d-flex btn-secondary text-white" alt="Product item" style="padding: 0px;">
                                                                </div>
                                                                <div class="">
                                                                    <h4 class="m-b-0 font-16" id=<%-user._id%> onclick="showUser('<%-user._id%>');" style="cursor: pointer;"><%-user.personalInfo.firstname + ' ' + user.personalInfo.lastname%></h4>
                                                                </div>
                                                            </div>
                                                        </td>
                                                        <td><%-user.local.email%></td>
                                                        <td id="<%-user._id%>_role"><%-user.role%></td>
                                                        <%if(user.role == 'seller'){%>
                                                            <td><label id="<%-user._id%>_stt" class="label label-success">Accepted</label></td>
                                                        <%}else if(user.role == 'buyer'){%>
                                                            <%if(user.identifyCard){%>
                                                                <td><label id="<%-user._id%>_stt" class="label label-warning">Pending</label></td>
                                                            <%}else{%>   
                                                                <td><label id="<%-user._id%>_stt" class="label label-primary">Actived</label></td>
                                                            <%}%>
                                                        <%}else{%>
                                                            <td><label id="<%-user._id%>_stt" class="label label-danger">Banned</label></td>
                                                        <%}%>
                                                    </div>    
                                                    <td>
                                                        <%if(user.role == 'banned'){%>
                                                            <i id="<%-user._id%>_test" class="p-1 fa fa-eye text-white bg-primary rounded" onclick="return show('<%-user._id%>')" style="cursor: pointer;"></i>
                                                        <%}else{%>
                                                            <i id="<%-user._id%>_ban" class="p-1 fa fa-ban text-white bg-danger rounded" onclick="return banUser('<%-user._id%>')" style="cursor: pointer;"></i>
                                                        <%}%>
                                                        <%if(user.role == 'seller'){%>
                                                            <i id="<%-user._id%>_approve" class="p-1 fa fa-times-circle text-white bg-danger rounded" onclick="return approve('<%-user._id%>')" style="cursor: pointer;"></i>
                                                        <%}%>        
                                                        <%if(user.role == 'buyer'){%>
                                                            <i id="<%-user._id%>_approve" class="p-1 fa fa-check text-white bg-success rounded" onclick="return approve('<%-user._id%>')" style="cursor: pointer;"></i>
                                                        <%}%>
                                                    </td>
                                                </tr>
                                            <%})%>
                                        <%}else{%>
                                            <tr>
                                                <h3>No users in the system.</h3>
                                            </tr>
                                        <%}%>
                                        
                                    </tbody>
                                </table>
